<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DynamicLocalization.Views.AnotherPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">
            <Label Text="{Binding Dialog}" TextColor="Purple" LineBreakMode="WordWrap"  HorizontalOptions="Center"/>
            <Button Text="{Binding GoBack}" TextColor="Purple" Command="{Binding NavigateBack}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>